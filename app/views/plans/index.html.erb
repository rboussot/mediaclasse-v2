                  data-name="Mediaclasse.fr"
                  data-description="Participation mensuelle"
                  data-amount="30000"
                  data-label="300€">
                </script>
              <% end %>
            </div>
            / par mois. <br>
            <p><i>* Le paiement est international, entièrement sécurisé et crypté de bout en bout.</i></p>
          </div>
        </div>
        <!-- === BOUTONS === -->
        <div class="row">
          <div class="col-xs-offset-2 plan-wrapper">
            <%= render 'shared/planquestion' %>
            <br>Vous souhaitez en savoir plus sur le système de paiement ?
            <div data-toggle = "modal" data-target = "#PlanQuestion" class="plan-question hvr-glow">
              <p>Comment ça fonctionne ?</p>
            </div>
          </div>
        </div>
