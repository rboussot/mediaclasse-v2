    <div class="col-xs-12">
      <div class="navbar-media">
        <!-- Logo -->
        <%= link_to root_path, class: "navbar-media-brand" do %>
          <%= image_tag "logo.png" %>
        <% end %>

        <%= link_to "Oeuvres et analyses", root_path, class: "link-litterature" %>
        <%= link_to "Méthodes & Techniques", root_path, class: "link-technique" %>
        <%= link_to "Communauté", root_path, class: "link-community" %>
        <%= link_to "Mes cours", root_path, class: "link-profile" %>


        <!-- Right Navigation -->
        <div class="navbar-media-right hidden-xs hidden-sm">


          <!-- Different navigation if login or not -->
          <% if user_signed_in? %>

            <!-- Notification -->
            <%#= link_to "#", class: "navbar-media-item navbar-media-link" do %>
      <!--         <div class="badge-container">
                <i class="fa fa-envelope-o"></i>
                <div class="badge badge-blue">3</div>
              </div> -->
            <%# end %>

            <!-- Profile picture and dropdown -->
            <div class="navbar-media-item">
              <div class="dropdown">
                <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-media-menu", "data-toggle" => "dropdown" %>
                <ul class="dropdown-menu dropdown-menu-right navbar-media-dropdown-menu">
                  <li>
                    <%= link_to "#" do %>
                      <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to "#" do %>
                      <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to destroy_user_session_path, method: :delete do %>
                      <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
                    <% end %>
                  </li>
                </ul>
              </div>
            </div>

          <% else %>
            <!-- Login text link -->
            <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-media-item navbar-media-link" %>
          <% end %>

          <!-- Button (call-to-action) -->
          <%= link_to t(".top_call_to_action", default: "connexion"), "#", class: "navbar-media-item navbar-media-button btn" %>
        </div>

        <!-- Dropdown list appearing on mobile only -->
        <div class="navbar-media-item hidden-md hidden-lg">
          <div class="dropdown">
            <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
            <ul class="dropdown-menu dropdown-menu-right navbar-media-dropdown-menu">
              <li><a href="#">Some mobile link</a></li>
              <li><a href="#">Other one</a></li>
              <li><a href="#">Other one</a></li>
            </ul>
          </div>
        </div>
      </div>

</div>
