<div class="navbar-media">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-media-brand" do %>
    <%= image_tag "logo.png", class: "hvr-grow" %>
  <% end %>
  <!-- ========== LARGE SCREEN MENU ========== -->
    <!-- === LINK LITT === -->
    <%= link_to "Oeuvres & analyses", litterature_courses_path, class: "hidden-xs hidden-sm navbar-link underline link-litterature hvr-underline-from-center" %>
    <!-- === LINK TECH === -->
    <% @technique_category = Category.where(tag: "technique").first.name %>
    <%= link_to "Méthodes & Techniques", technique_courses_path(category: @technique_category), class: "hidden-xs hidden-sm navbar-link underline link-technique" %>
    <!-- === LINK CHANNELS === -->
    <% @channels_category = Category.where(tag: "chaines").first.name %>
    <%= link_to "Communauté", channels_path(category: @channels_category), class: "hidden-xs hidden-sm navbar-link underline link-community" %>
    <% if current_user %>
    <!-- === LINK MY_COURSES === -->
      <%= link_to "Mes cours", user_path(current_user), class: "hidden-xs hidden-sm navbar-link underline link-profile" %>
    <% else %>
      <%= link_to "Mes cours", "#", "data-toggle" => "modal", "data-target" => "#myLoginModal", class: "hidden-xs hidden-sm navbar-link underline link-profile" %>
    <% end %>
  <!-- ========== MOBILE SCREEN MENU ========== -->
    <!-- === LINK LITT === -->
    <%= link_to "Oeuvres", litterature_courses_path, class: "hidden-md hidden-lg navbar-link-little underline link-litterature hvr-underline-from-center" %>
    <!-- === LINK TECH === -->
    <% @technique_category = Category.where(tag: "technique").first.name %>
    <%= link_to "Techniques", technique_courses_path(category: @technique_category), class: "hidden-md hidden-lg navbar-link-little underline link-technique" %>
    <!-- === LINK CHANNELS === -->
    <% @channels_category = Category.where(tag: "chaines").first.name %>
    <%= link_to "Communauté", channels_path(category: @channels_category), class: "hidden-md hidden-lg navbar-link-little underline link-community" %>
    <% if current_user %>
    <!-- === LINK MY_COURSES === -->
      <%= link_to "Mes cours", user_path(current_user), class: "hidden-md hidden-lg navbar-link-little underline link-profile" %>
    <% else %>
      <%= link_to "Mes cours", "#", "data-toggle" => "modal", "data-target" => "#myLoginModal", class: "hidden-md hidden-lg navbar-link-little underline link-profile" %>
    <% end %>
  <!-- ========== LOGIN ========== -->
  <% if user_signed_in? %>
  <!-- === PROFILE & DROPDOWN === -->
  <div class="hidden-xs hidden-sm">
    <div class="navbar-media-right">
      <div class="navbar-media-item">
        <div class="dropdown">
          <% if current_user.picture %>
          <%= cl_image_tag current_user.picture.path, class: "list-image", width: 40, height: 40, crop: :fill, class: "avatar-bordered hvr-grow dropdown-toggle", id: "navbar-media-menu", "data-toggle" => "dropdown" %>
          <% else %>
          <%= cl_image_tag 'http://res.cloudinary.com/mediaclasse-fr/image/upload/v1472721068/2000px-AWS_Simple_Icons_Non-Service_Specific_User.svg_kkmiui.png', class: "list-image", width: 40, height: 40, crop: :fill, class: "avatar-bordered hvr-grow dropdown-toggle", id: "navbar-media-menu", "data-toggle" => "dropdown" %>
          <% end %>
          <ul class="dropdown-menu dropdown-menu-right navbar-media-dropdown-menu">
            <li>
              <%= link_to edit_user_path(current_user) do %>
                <i class="fa fa-user"></i> Mon Profil
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-home"></i> Accueil
              <% end %>
            </li>
            <li>
              <%= link_to plans_path do %>
                <i class="fa fa-star"></i> Participer
              <% end %>
            </li>
            <li>
              <%= link_to newsletter_path do %>
                <i class="fa fa-paper-plane"></i> Lettre d'Infos
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Déconnexion") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
    <!-- ========== NOT LOGIN ========== -->
      <div class="loginsignup">
        <!-- === MODALES DE CONNECTION === -->
        <button type="button" class="navbar-login" data-toggle="modal" data-target="#myLoginModal">connexion</button>
        <button type="button" class="navbar-signup" data-toggle="modal" data-target="#mySignUpModal">inscription</button>
      </div>
    <% end %>
  </div>
</div>
  <!-- ========== MOBILE SCREEN ========== -->
  <div class="navbar-media-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-media-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>

