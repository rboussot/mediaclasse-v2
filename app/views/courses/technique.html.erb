<div class= "home-wrapper">
  <div class="container-fluid">
  <div class="border technique"></div>
    <!-- ========== SEARCHBAR ========== -->
    <div class="col-xs-8 col-xs-offset-3">
      <form action="" class="list-search">
        <input type="text" class="list-search-input" placeholder="Chercher dans les cours">
        <button type="submit" class="list-search-btn">
          <i class="fa fa-search"></i>
        </button>
      </form>
    </div>
    <!-- ========== SIDEBAR ========== -->
    <div class="col-xs-1 col-xs-offset-2">
      <div id="sidebar">
        <div id="sidebar-category">
          <% @categories.reverse.each do |category| %>
            <%= link_to technique_courses_path(category) do %>
              <% if category.id.to_s == params[:format] %>
                <h4 class="active"><%= category.name %></h4>
              <% else %>
                <h4><%= category.name %></h4>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <!-- ========== SCROLL LIST ========== -->
    <div class="col-xs-9">
      <div class="list-scroll">
        <% @technique_courses.each do |c| %>
          <div class="list-item">
            <% if c.lectures.first %>
              <%= link_to lecture_path(c.lectures.first) do %>
                <%= cl_image_tag c.picture.path, class: "list-image", width: 178, height: 267, crop: :fill %>
                <ul>
                  <li><h3><%= c.title %></h3></li>
                  <li><p><%= c.description %></p></li>
                  <li><p><%= c.lectures.count %> videos</p></li>
                  <li>
                    <p class="list-themes"> <% c.themes.each do |t| %>
                      <%= t.name %>;
                    <% end %>
                    </p>
                  </li>
                </ul>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <!-- ====== CLOSE WRAPPER AND CONTAINER ====== -->
  </div>
</div>
