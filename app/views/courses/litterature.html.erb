<div class= "home-wrapper">
  <div class="container-fluid">
  <div class="border litterature"></div>
      <!-- ========== SEARCHBAR ========== -->
    <div class="col-xs-8 col-xs-offset-3">
      <form action="" class="list-search">
        <input type="text" class="list-search-input" placeholder="Chercher dans les oeuvres">
        <button type="submit" class="list-search-btn">
          <i class="fa fa-search"></i>
        </button>
      </form>
    </div>
      <!-- ========== SIDEBAR ========== -->
    <div class="col-xs-1 col-xs-offset-2">
      <div id="sidebar">
        <div id="sidebar-parauteur">
          <h4>Par auteur</h4>
        </div>
        <% ('A' .. 'Z').to_a.each do | letter | %>
          <div id="sidebar-letter">
            <%= link_to letter, litterature_courses_path(anchor: letter) %>
          </div>
        <% end %>
      </div>
    </div>
    <!-- ========== SCROLL LIST ========== -->
    <div class="col-xs-9">
      <div class="list-scroll">
        <% @litterature_courses.each do |c| %>
          <% if c.lectures.first %>
            <div class="list-item" id="<%= c.author.pseudo.first %>">
              <%= link_to lecture_path(c.lectures.first) do %>
                <%= cl_image_tag c.picture.path, class: "list-image", width: 178, height: 267, crop: :fill %>
                <ul>
                  <li> <h3>  <%= c.author.pseudo %>, <%= c.title %> - <%= c.date %> </h3></li>
                  <li> <p> <%= c.description %> </p> </li>
                  <li> <p> <%= c.lectures.count %> videos</p> </li>
                  <li>
                    <p class="list-themes"> <% c.themes.each do |t| %>
                      <%= t.name %>;
                    <% end %>
                    </p>
                  </li>
                </ul>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <!-- ====== CLOSE WRAPPER AND CONTAINER ====== -->
  </div>
</div>

