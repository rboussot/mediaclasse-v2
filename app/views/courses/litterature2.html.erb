<div class= "home-wrapper">
  <div class="container-fluid">
  <div class="border litterature"></div>
      <!-- ========== SEARCHBAR ========== -->
      <form action="" class="list-search">
        <input type="text" class="list-search-input" placeholder="Search something">
        <button type="submit" class="list-search-btn">
          <i class="fa fa-search"></i>
        </button>
      </form>
      <!-- ========== SIDEBAR ========== -->
    <div class="col-md-2 col-xs-2">
      <div id="sidebar">
      <div id="sidebar-category">
      <h4>Par auteur</h4>
      </div>
        <% ('A' .. 'Z').to_a.each do | letter | %>
          <div id="sidebar-letters">
            <%= letter %>
          </div>
        <% end %>
      </div>
    </div>
    <!-- ========== SCROLL LIST ========== -->
    <div class="col-md-8 col-md-offset-1">
      <div class="list-scroll">
        <% @litterature_courses.each do |c| %>
          <div class="list-litterature">
            <%= link_to lecture_path(c) do %>
              <%= cl_image_tag c.picture.path, class: "list-image", width: 178, height: 267, crop: :fill %>
              <ul>
                <li> <h3>  <%= c.author.pseudo %>, <%= c.title %> - <%= c.date %> </h3></li>
                <li> <p> <%= c.description %> </p> </li>
                <li> <p> <%= c.lectures.count %> videos</p> </li>
                <li>
                  <p class="list-litterature-themes"> <% c.themes.each do |t| %>
                    <%= t.name %>;
                  <% end %>
                  </p>
                </li>
              </ul>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <!-- ====== CLOSE WRAPPER AND CONTAINER ====== -->
  </div>
</div>
