<div class="home-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-6 col-xs-offset-3"><br><br>

        <h2>Créer un compte</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true %>
            <%= f.input :password, label: "Mot de passe", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            <%= f.input :password_confirmation, label: "Confirmez le mot de passe", required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Créer un compte" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>
